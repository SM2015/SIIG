{% extends 'IndicadoresBundle::standard_layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/indicadores/css/FichaTecnicaAdmin/tablero.css') }}" type="text/css" media="all" />    
{% endblock %}    
    
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/indicadores/js/FichaTecnicaAdmin/tablero.js') }}" type="text/javascript"></script>    
{% endblock %}
    


{% block content %}
    <div class="tablero container-fluid">
        <div class="row-fluid">
            <div class="span2" id='tablero_indicadores'>
                {% for categoria in categorias%}
                    <H3>{{categoria.descripcion}}</H3>
                    <DIV>Indicadores de la categoria {{categoria.descripcion}}</DIV>
                {% endfor %}
            </div>
            <div class="span10" id='tablero_graficos'>
                Gráficos
            </div>
        </div>
    </div>    
{% endblock %}