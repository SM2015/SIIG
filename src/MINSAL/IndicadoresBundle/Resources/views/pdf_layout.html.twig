<!DOCTYPE html>
<html >
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        {% block stylesheets %}
            <style type="text/css">
                table{
                    border-collapse: collapse;
                }
                table td, table th {
                  border: 1px solid black;
                }
                .sonata-bc .span12 {
                    width: 16cm;
                }
            </style>
        {% endblock %}
    </head>
    <body class="sonata-bc sonata-ba-no-side-menu">
        <div class="content span12">
            {% block content %}
                {% block preview %}{% endblock %}
                {% block form %}{% endblock %}
                {% block list %}{% endblock %}
                {% block show %}{% endblock %}

                <div class="sonata-ba-filter">
                    {% block list_filters %}{% endblock %}
                </div>
                <div class="sonata-ba-list">
                    {% block list_table %}{% endblock %}
                </div>
            {% endblock %}
        </div>
    </body>
</html>
