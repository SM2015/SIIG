{% extends 'IndicadoresBundle:CRUD:edit.html.twig' %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('bundles/indicadores/js/ConexionAdmin/origen_dato_edit.js') }}" type="text/javascript"></script>    
{% endblock %}

{% block form %}
    {{ parent() }}
    {% if object.getEsFusionado==false %}
    {# Si se est√° editando el objeto presentar la intefaz para configurar el origen de datos#}
    <button type='button' name="btn_probar_sentencia" id='btn_probar_sentencia' class='btn'>
